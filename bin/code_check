#!/usr/bin/env sh
SRC_DIR="`pwd`"

cd "`dirname "$0"`"
cd ..

./../../bin/parallel-lint ./src
./../../bin/twig-lint lint ./view
./../../bin/php-cs-fixer fix -v ./src --level=psr2
./../../bin/phpcbf --standard=PSR2 ./src --no-patch
./../../bin/phpcs -n -p --standard=PSR2 --extensions=php,twig ./src
./../../bin/phpunit